<Window x:Class="NeosImageConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeosImageConverter"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="400">
    <Grid>        
        <TabControl>
            <TabItem Header="Mettalic/Smoothness">
                <StackPanel Background="#FFE5E5E5">
                    <Label Content="First Image"/>
                    <Image Width="100" Height="100"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Pack Normals">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Pack Heights">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
